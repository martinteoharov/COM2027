{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "bin",
        "rootDir": "..",
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "typeRoots": [
            "src/types",
            "src/types/**"
        ],
        "types": [
            "jest",
            "node",
            "fastify-ws"
        ],
    },
    "include": [
        "src",
        "test",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/common/React"
    ]
}